{
  "overrides": [
    {
      "files": "*.component.html",
      "options": {
        "parser": "angular",
        "tabWidth": 4
      }
    },
    {
      "files": "*.scss",
      "options": {
        "parser": "scss",
        "tabWidth": 2
      }
    },
    {
      "files": ["*.json", ".prettierrc"],
      "options": {
        "parser": "json",
        "tabWidth": 2
      }
    }
  ]
}
